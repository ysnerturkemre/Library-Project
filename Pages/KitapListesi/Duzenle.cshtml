@page
@model Kitaplisteleme.Pages.KitapListesi.DuzenleModel
<br />
<h2 class="text-info">Kitap bilgileri Düzenle</h2>
<br />
<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Kitap.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Kitap.KitapAd"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Kitap.KitapAd" class="form-control" />
            </div>
            <span asp-validation-for="Kitap.KitapAd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Kitap.Yazar"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Kitap.Yazar" class="form-control" />
            </div>
            <span asp-validation-for="Kitap.Yazar" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Kitap.ISBN"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Kitap.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Kitap.ISBN" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Güncelle" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Kitap Listesine Geri Dön </a>

            </div>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}