@page
@model Kitaplisteleme.Pages.KitapListesi.IndexModel

<br />
<div class="container row p-0 m-0 ">
    <div class="col-9">
        <h2 class="text-info">Kitap Listesi </h2>
    </div>
    <div class="col-3">
        <a asp-page="Olustur" class="btn btn-info form-control text-white">Yeni Kitap Oluştur </a>

    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Kitaplar.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Kitaplar.FirstOrDefault().KitapAd"></label>
                        </th>

                        <th>
                            @*@Html.DisplayNameFor(a => a.Kitaplar.FirstOrDefault().Yazar)*@
                            <label asp-for="Kitaplar.FirstOrDefault().Yazar"></label>
                        </th>
                        <th>
                            <label asp-for="Kitaplar.FirstOrDefault().ISBN"></label>
                        </th>

                        <th>İŞLEMLER</th>


                    </tr>
                    @foreach(var item in Model.Kitaplar)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(a => item.KitapAd)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.Yazar)
                    </td>
                    <td>
                        @Html.DisplayFor(a => item.ISBN)
                    </td>
                    <td>


                        <button asp-page-handler="Sil" asp-route-id="@item.Id" onclick="return confirm('İlgili veriyi silmek ister misiniz?') "  class="btn btn-danger btn-sm">Sil</button>
                        <a asp-page="Duzenle" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Düzenle</a>
                    </td>
                </tr>
                    }

                </table>
            }
            else
            {
                <p>Listelenecek Kitap Bulunamadı</p>
            }
        </form>

    </div>


</div>